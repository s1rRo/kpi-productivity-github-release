{
  "name": "kpi-backend",
  "version": "1.0.0",
  "description": "Backend API for KPI Productivity system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:performance": "artillery run artillery.yml --output performance-results/results.json",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "migrate:run": "tsx src/utils/migrations.ts",
    "migrate:status": "tsx -e \"import { prisma } from './src/index'; prisma.$queryRaw\\`SELECT 1\\`.then(() => console.log('Database connected')).catch(console.error).finally(() => process.exit())\"",
    "deploy:staging": "../scripts/deploy-staging.sh",
    "deploy:production": "../scripts/deploy-production.sh",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "docs:validate": "tsx src/scripts/validateDocumentation.ts",
    "docs:generate": "tsx -e \"import { DocumentationGenerator } from './src/services/documentationGenerator'; const gen = new DocumentationGenerator(); gen.saveDocumentation('./docs/api/generated-documentation.md').then(() => console.log('Documentation generated successfully')).catch(console.error);\""
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^10.33.0",
    "@sentry/profiling-node": "^10.33.0",
    "@types/nodemailer": "^7.0.5",
    "@types/redis": "^4.0.11",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fuse.js": "^7.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.7",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "prisma": "^7.2.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
